<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vicmob.mapper.StoreUserMapper">

    <resultMap id="RoleResultMap" type="com.vicmob.domain.SysUser">
        <id column="user_id"  property="userId"  jdbcType="INTEGER" />
        <result column="user_name"  property="userName"  jdbcType="VARCHAR" />
        <result column="password"   property="password"  jdbcType="VARCHAR" />
        <result column="user_type"  property="userType"  jdbcType="INTEGER" />
        <result column="agent_store_id"  property="agentStoreId"  jdbcType="INTEGER" />
    </resultMap>

    <select id="findByName"  parameterType="String" resultMap="RoleResultMap"  >
        select
        *
        from  sys_user
        where user_name = #{userName}
        and user_type = 2
    </select>

    <insert id="insert" parameterType="com.vicmob.domain.SysUser" useGeneratedKeys="true" keyProperty="userId">
        insert into sys_user
        (user_name,
         password,
         user_type,
         agent_store_id
        )
        values
        (
        #{userName},
        #{password},
        #{userType},
        #{agentStoreId}
        )

    </insert>

    <update id="updatePswd" parameterType="com.vicmob.domain.SysUser">
        update sys_user set password = #{password} where user_id = #{userId}
    </update>

</mapper>